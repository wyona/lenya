<?xml version="1.0" encoding="UTF-8"?>

<insertTemplates xmlns:elml="http://www.elml.ch">

  <template label="Unit" context="//elml:lesson">
    <elml:unit label="label1" title="Title der Unit">
      <elml:entry>
        <paragraph>Einleitung zur Unit mit optionalem Bild</paragraph>
        <toc recurse="false" scope="unit"/>
      </elml:entry>
      <elml:learningObject title="Titel des Learning Objects" label="label1_1">
        <elml:clarify>
          <elml:paragraph>Erklärung</elml:paragraph>
        </elml:clarify>
        <elml:look>
          <elml:paragraph>Beispiel</elml:paragraph>
        </elml:look>
        <elml:act metaSetUpInfo="none">
          <elml:paragraph>Übung</elml:paragraph>
        </elml:act>
      </elml:learningObject>
    </elml:unit>
  </template>

  <template label="Entry" context="//elml:lesson">
    <elml:entry>
      <elml:paragraph>Einleitung</elml:paragraph>
    </elml:entry>
  </template>

  <template label="Goals" context="//elml:entry">
    <elml:goals>
      <elml:lObjective>A learning objective</elml:lObjective>
    </elml:goals>
  </template>

  <template label="LearningObject" context="//elml:unit">
    <elml:learningObject title="Titel des Learning Objects" label="labelXX">
      <elml:clarify>
        <elml:paragraph>Clarify</elml:paragraph>
      </elml:clarify>
    </elml:learningObject>
  </template>

  <template label="Clarify" context="//elml:learningObject">
    <elml:clarify>
      <elml:paragraph>Clarify</elml:paragraph>
    </elml:clarify>
  </template>

  <template label="Look" context="//elml:learningObject">
    <elml:look>
      <elml:paragraph>Look</elml:paragraph>
    </elml:look>
  </template>

  <template label="Act" context="//elml:learningObject">
    <elml:act metaSetUpInfo="setup description">
      <elml:paragraph>Act</elml:paragraph>
    </elml:act>
  </template>

</insertTemplates>
