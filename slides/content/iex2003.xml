<s:slide id="xsp">
<s:title>XSP - Extensible Server Pages</s:title>
<s:content>
<p>
<source>
<![CDATA[
<?xml version="1.0"?>

<xsp:page language="java" xmlns:xsp="http://apache.org/xsp">

<xsp:structure>
  <xsp:include>java.text.DateFormat</xsp:include>
  <xsp:include>java.util.Locale</xsp:include>
</xsp:structure>

<current-date>
  <xsp:logic>
  Date date=new Date();
  DateFormat df=DateFormat.getDateTimeInstance(DateFormat.FULL,  //date
                                               DateFormat.SHORT, // time
                                               new Locale("de","DE"));
  </xsp:logic>

  <xsp:expr>df.format(date)</xsp:expr>
</current-date>
</xsp:page>
]]>
</source>
</p>
</s:content>
</s:slide>



